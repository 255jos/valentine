<body>
   <div class="heart"></div>
   <img id="first" class="img" src="download.gif" alt="Image">
   <h1 id="valentine-text">Will you be my valentine?</h1>
   <div id="container">
        <button id="yes">Yes</button>
        <button id="no">No</button>
   </div>

   <script>
    // Array of image sources and text
    const images = [
        { src: "uwu.gif", text: "Oh no, you didn't say yes! üò¢" },
        { src: "download(1).gif", text: "Still not convinced? üòî" },
        { src: "download(2).gif", text: "Come on! It‚Äôs just one click! üòñ" }
    ];

    let currentImageIndex = 0;  // Start at the first image

    // Function to change the image and text when "No" is clicked
    document.getElementById("no").addEventListener("click", function() {
        currentImageIndex++;  // Move to the next image

        // If we've reached the end of the array, loop back to the first image
        if (currentImageIndex >= images.length) {
            currentImageIndex = 0;
        }

        // Update the image source
        document.getElementById("first").src = images[currentImageIndex].src;

        // Update the text content based on the image
        document.getElementById("valentine-text").textContent = images[currentImageIndex].text;

        // Randomize the movement of the "No" button
        const noButton = document.getElementById("no");

        // Random X and Y positions (within a range)
        const randomX = Math.floor(Math.random() * 300) - 150; // Moves within -150 to 150 pixels
        const randomY = Math.floor(Math.random() * 300) - 150; // Moves within -150 to 150 pixels

        // Set CSS variables for random movement
        noButton.style.setProperty('--moveX', `${randomX}px`);
        noButton.style.setProperty('--moveY', `${randomY}px`);

        // Apply the animation to move the button
        noButton.style.animation = 'escapeAnimation 0s forwards';
    });

    // Optional: Handle "Yes" button click
    document.getElementById("yes").addEventListener("click", function() {
        document.getElementById("valentine-text").textContent = "Yay! ‚ù§Ô∏è i knew it!";
        document.getElementById("first").src = "yay.gif";  
    });
   </script>
</body>
</html>
