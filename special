    <link rel="stylesheet" href="love.css">
    <title>Document</title>
    <style>
        body {
            font-family: 'Open Sans', sans-serif;
            background-color: #FFB6C1;
            text-align: center;
            padding: 20px;
        }

        .img {
            max-width: 100%;
            height: auto;
            width: 300px;
            margin: 20px auto;
        }

        #valentine-text {
            font-family: "Dancing Script", serif;
            font-size: 24px;
            font-weight: 400;
            margin-top: 20px;
        }

        #container {
            margin-top: 20px;
        }

        button {
            background-color: hotpink;
            border: none;
            width: 100px;
            height: 40px;
            color: white;
            font-size: 18px;
            margin: 10px;
            cursor: pointer;
            position: relative;
            transition: all 0.5s ease;
        }

        button:hover {
            background-color: #FF69B4;
        }

        /* Keyframes for the random movement */
        @keyframes escapeAnimation {
            0% {
                transform: translate(0, 0); /* Original position */
            }
            100% {
                transform: translate(var(--moveX), var(--moveY)); /* Random position */
            }
        }
    </style>
